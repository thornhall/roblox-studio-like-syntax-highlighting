{
    "name": "roblox-studio-like-syntax-highlighting",
    "displayName": "Roblox Studio-Like Syntax Highlighting",
    "description": "Syntax highlighting for VSCode inspired by Roblox Studio syntax highlighting. Requires Luau-lsp to work. Now comes with auto-insertion functionality like Roblox Studio!",
    "version": "1.0.2",
    "publisher": "ThornHall",
    "icon": "studio.png",
    "engines": {
        "vscode": "^1.98.0"
    },
    "activationEvents": [
        "onLanguage:lua",
        "onLanguage:luau"
    ],
    "main": "./out/extension.js",
    "categories": [
        "Themes"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/thornhall/roblox-studio-like-syntax-highlighting.git"
    },
    "keywords": [
        "roblox",
        "luau",
        "lua",
        "syntax highlighting",
        "roblox studio",
        "theme",
        "dark theme",
        "code highlighting",
        "color theme",
        "game dev",
        "scripting"
    ],
    "contributes": {
        "themes": [
            {
                "label": "Roblox Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/DarkTheme.json"
            },
            {
                "label": "Roblox Light",
                "uiTheme": "vs",
                "path": "./themes/WhiteTheme.json"
            }
        ],
        "commands": [
            {
                "command": "roblox.autoInsertFunctionEnd",
                "title": "Auto insert end after function keyword"
            },
            {
                "command": "roblox.autoInsertIfThenEnd",
                "title": "Auto insert end after if keyword"
            },
            {
                "command": "roblox.autoInsertDo",
                "title": "Auto insert do after while and for keywords"
            }
        ],
        "extensionDependencies": [
            "johnnymorganz.luau-lsp"
        ]
    },
    "scripts": {
        "build": "tsc",
        "watch": "tsc --watch",
        "prepublish": "npm run build"
    },
    "dependencies": {
        "typescript": "^5.8.2"
    },
    "devDependencies": {
        "@types/vscode": "^1.98.0",
        "@vscode/test-electron": "^2.4.1"
    }
}