{
	"name": "Roblox Studio-Like Syntax Highlighting",
	"colors": {
        "editor.background": "#000000",
        "editor.foreground": "#ffffff"
	},
    "semanticHighlighting": true,
    "semanticTokenColors": {
        "*.defaultLibrary": {
            "foreground": "#44e7f9",
            "fontStyle": "bold"
        }
    },
	"tokenColors": [
        {
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "foreground": "#595958",
                "fontStyle": "italic"
            }
        },
        {
            "scope": "string",
            "settings": {
                "foreground": "#a7ff91"
            }
        },
        {
            "scope": "keyword",
            "settings": {
                "foreground": "#f77575",
                "fontStyle": "bold"
            }
        },
        {
            "scope": "entity.name.function",
            "settings": {
                "foreground": "#fafa9f"
            }
        },
        {
            "scope": "number",
            "settings": {
                "foreground": "#f5ce42"
            }
        },
        {
            "scope": "constant.language",
            "settings": {
                "foreground": "#f5ce42"
            }
        },
        {
            "scope": "punctuation",
            "settings": {
                "foreground": "#ffffff"
            }
        },
        {
            "scope": [
                "keyword.control",
                "keyword.operator.comparison",
                "storage.type",
                "keyword.control",
                "storage.modifier",
                "variable.language.special.self",
                "variable.language.self",
                "variable.language.super",
                "variable.language.this"
            ],
            "settings": {
                "foreground": "#f77575",
                "fontStyle": "bold"
            }
        },
        {
            "scope": [
                "keyword.operator.assignment",
                "keyword.operator.comparison"
            ],
            "settings": {
                "foreground": "#f77575"
            }
        },
        {
            "scope": [
                "support.function",
                "entity.name.function"
            ],
            "settings": {
                "foreground": "#fafa9f"
            }
        },
        {
            "scope": [
                "string.quoted.single",
                "string.quoted.double"
            ],
            "settings": {
                "foreground": "#a7ff91"
            }
        },
        {
            "scope": [
                "entity.other.attribute",
                "variable.language.metamethod",
                "variable.other.property",
                "meta.attribute",
                "meta.member.access"
            ],
            "settings": {
                "foreground": "#61a1f0"
            }
        },
        {
            "scope": [
                "entity.name.type",
                "keyword.function",
                "support.function",
                "constant.language.luau",
                "support.type"
            ],
            "settings": {
                "foreground": "#44e7f9"
            }
        },
        {
            "scope": [
                "constant.language.boolean.true",
                "constant.language.boolean.false"
            ],
            "settings": {
                "foreground": "#f5ce42",
                "fontStyle": "bold"
            }
        },
        {
            "scope": "string.quoted",
            "settings": {
                "foreground": "#a7ff91"
            }
        },
        {
            "scope": [
                "comment.line"
            ],
            "settings": {
                "foreground": "#595958"
            }
        },
        {
            "scope": [
                "constant.numeric",
                "constant.language.nil"                 
            ],
            "settings": {
                "foreground": "#f5ce42"
            }
        }
    ]
}
